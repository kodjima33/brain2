{
  "name": "@brain2/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@brain2/ai": "workspace:*",
    "@brain2/db": "workspace:*",
    "@brain2/lib": "workspace:*",
    "@clerk/nextjs": "^4.28.1",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^5.8.7",
    "@tanstack/react-query-devtools": "^5.8.7",
    "@tanstack/react-query-next-experimental": "5.8.7",
    "axios": "^1.6.3",
    "cors": "^2.8.5",
    "langchain": "^0.0.212",
    "lucide-react": "^0.307.0",
    "luxon": "^3.4.4",
    "next": "^14.0.4",
    "openai": "^4.24.1",
    "react": "18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "superjson": "2.2.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3"
  },
  "devDependencies": {
    "@brain2/eslint-config": "workspace:^0.2.0",
    "@brain2/prettier-config": "workspace:^0.1.0",
    "@brain2/tailwind-config": "workspace:^0.1.0",
    "@brain2/tsconfig": "workspace:^0.1.0",
    "@types/luxon": "^3.3.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^18.2.18",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tailwindcss": "3.4.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@brain2/eslint-config/base",
      "@brain2/eslint-config/nextjs",
      "@brain2/eslint-config/react"
    ]
  },
  "prettier": "@brain2/prettier-config"
}
